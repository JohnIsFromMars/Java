package abcTechStringVideos;
// Video 7
// New method: System.exit(0) = Method exits current program by terminating running java virtual machine
public class Palindrome {

	public static void main(String[] args) {
		String x = "        ";
		
		char y[] = x.toCharArray();				 // 1. A method that converts string into a sequence of characters that is inserted into an array
		int size = y.length;					 // 2. A method that returns the number of elements in the array
		char a[] = new char[size];  			 // 3. A new array named 'a' is created with the same number of arrays as the 'y' array
		int i = 0;
		while(i != size)						 // 4. Loop will repeatedly execute so long as the value of 'i' does not equal the value of 'size'
		{
			a[size - 1 - i] = y[i];				 // 5. The array 'a' is assigned values from the array 'y'
			++i;
		}
		i = 0;
		while(i != size)						 // 6. Loop will repeatedly execute so long as the value of 'i' does not equal the value of 'size'
		{
			if(a[i] != y[i])
			{
				System.out.println("Not a palindrome");		// 7. Since array 'a' and array 'y' are reversed, if are not equal, it is not a palindrome
				System.exit(0);								// 8. System.exit(0) indicates successful termination
			}
			else
			{
				++i;
				continue;
			}
		}
		System.out.println("Palindrome"); 
	}

}
